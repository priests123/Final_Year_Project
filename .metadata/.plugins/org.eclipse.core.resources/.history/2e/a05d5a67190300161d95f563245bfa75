package Display;

import java.awt.*;

import javax.swing.*;

public class StatisticsGUI {

	private static int H = 300;
	private static int W = 300;
	
	//private JLabel label = new JLabel();
	private JButton theBtImport = new JButton(BtnNames.IMPORT);
	
	private ActionListeners theCB = new ActionListeners();
	
	public StatisticsGUI(RootPaneContainer rpc) {
		
		Container cp = rpc.getContentPane();
		Container rootWindow = (Container) rpc;
		cp.setLayout(null);
		rootWindow.setSize(W, H);
		Dimension screenSize = Toolkit.getDefaultToolkit().getScreenSize();
		
		int height = screenSize.height;
		int width = screenSize.width;
		
		rootWindow.setLocation((width / 2) - W, (height / 2) - H);
		
		theBtImport.setBounds(10, 10, 120, 40);
		theBtImport.addActionListener(theCB);
		cp.add(theBtImport);
		
		rootWindow.setVisible(true);
		
	}


}
